<%- include('./partials/header.ejs') %>  


  <div class="container" style="background: linear-gradient(to right, rgba(51, 156, 204, 0.6), rgba(7, 20, 77, 0.6)); width: 100%; height: 100%;">

  <% if(grouped){ for(let key in grouped) { let items=grouped[key]; %>
<div class="row" style="color: white;" >
  <h4><b><%=key%></b></h4>
  <%items.forEach(item=>{ %>
<div class="col-sm-3" >
  <div class="thumbnail" style="width:180px; height: 180px;" >
     
      <% if(item.imageurl.length) {%>
        <a href="/trades/<%=item.id%>"> <img src="<%=item.imageurl%>" alt="Lights" style="width:120px; height: 120px;"> </a>
        
    <%} else {%>
      <a href="/trades/<%=item.id%>"><img src="https://github.com/KrithiKsd/Web-Excercises/blob/main/Project2/public/images/imgSwapnew.png?raw=true" alt="Lights" style="width:120px; height: 120px;"></a>
        
     <%}%>  
      <div class="caption" style="text-align: center;">
        <h5><b><a href="/trades/<%=item.id%>"><%=item.name%></a></b></h5>
      </div>
  
  </div>
</div>
<% });%>
</div>
<%  }}else{ %>
  <p>There are no items to display.</p>
  <%}%>
</div>

<br>
