
<%- include('../partials/header.ejs')%>

<div class="centered" style="text-align:center" > 
   
    <img src="../images/avatar.jpg" alt="profile" style="width:120px; height:120px;"  >


<div class="container" style="background: linear-gradient(to right, rgba(204, 51, 99, 0.6), rgba(152, 163, 52, 0.6)); height: 450px;" >
    <br>
      <div class="centered" style="color: white;">
        <div class="container-fluid">
            <h4>Login here!</h4>
          <br>
